<%- include('../header') %>
<div class="container my-5 py-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <form method="post" action="/foods/edit/<%= foods.id %>">
        <div class="mb-3">
          <label for="">Name</label>
          <input type="text" value="<%= foods.name %>" class="form-control" placeholder="Input Name" name="name" />
        </div>
        <div class="mb-3">
          <label for="">Image url</label>
          <input type="text" value="<%= foods.image %>" class="form-control" placeholder="Input Name" name="image" />
        </div>
        <div class="mb-3">
          <label for="">Price</label>
          <input type="text" value="<%= foods.price %>" class="form-control" placeholder="Input Name" name="price" required />
        </div>
        <div class="mb-3">
          <label for="">Cabang Restaurant</label>
          <input type="text" class="form-control" placeholder="Input Name" value="<%= foods.restaurantId %>" name="restaurantId" required />
        </div>
        <div class="mb-3">
          <button class="btn btn-primary" type="submit">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include('../footer') %>
